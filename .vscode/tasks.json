{
  "version": "2.0.0",
  "tasks": [
      {
          "label": "CMake: Build",
          "type": "shell",
          "command": "cmake",
          "args": [
              "--build",
              "${workspaceFolder}\\build",  // Pasta de build gerada pelo CMake
              "--config",
              "Debug"  // Ou "Release", dependendo da sua configuração
          ],
          "group": {
              "kind": "build",
              "isDefault": true
          },
          "problemMatcher": ["$gcc"],
          "detail": "Compilar o projeto CMake"
      },
      {
          "label": "CMake: Run Executable",
          "type": "shell",
          "command": "${workspaceFolder}\\build\\main.exe",  // Caminho do executável no Windows
          "dependsOn": ["CMake: Build"],
          "group": "build",
          "problemMatcher": []
      }
  ]
}
